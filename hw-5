    <title>Document</title>
</head>
<body>
    <script>
        /* Битва за респект */
        const arr = ['banan', 'ananas', 'strawberry', 'js', 'react']

        function mySplice(array, start, count, insert) {
            if (typeof count === 'undefined') count = 1;
        
            while (count--) {
            const index2remove = start + count;
            array[index2remove] = array.pop();
            }
        
            if (typeof insert !== 'undefined') array.push(insert);

            return array
        }

        const a = mySplice(
            arr,
            1,
            2,
            'PRIVET'
            )
    </script>
</body>
